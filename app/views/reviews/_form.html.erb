<%= simple_form_for [@restaurant, @review] do |r| %>
  <div class="form-group">
    <%= r.label :content %>
    <%= r.text_field :content, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= r.input :rating, input_html: {min: 0, max: 5}, class: 'form-control' %>
  </div>

  <%= r.submit class: 'btn btn-primary' %>
<% end %>
